{
  "name": "modern-web-login-interface",
  "version": "1.0.0",
  "description": "모던한 웹 로그인 인터페이스 - 한 페이지 스크롤 형태",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "live-server --port=3000 --open=index.html",
    "start": "pnpm run dev",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:basic": "vitest basic.test.js",
    "test:advanced": "vitest advanced",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "lint": "eslint src/ e2e/ *.js",
    "lint:fix": "eslint src/ e2e/ *.js --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\" \"e2e/**/*.js\" \"*.{js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,css,html}\" \"e2e/**/*.js\" \"*.{js,json,md}\"",
    "prepare": "husky install && chmod +x .husky/*",
    "clean": "rimraf dist coverage playwright-report test-results",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "login",
    "interface",
    "modern",
    "ui",
    "scroll",
    "responsive",
    "vanilla-js",
    "css3",
    "html5"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@playwright/test": "^1.40.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.57.0",
    "husky": "^8.0.3",
    "jsdom": "^23.0.0",
    "lint-staged": "^15.0.0",
    "live-server": "^1.2.2",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "lint-staged": {
    "*.{js,css,html}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "packageManager": "pnpm@8.15.0",
  "dependencies": {
    "html-react-parser": "^5.2.10",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.10.1"
  }
}
